{
  "id": "nodebb-plugin-audio-message",
  "name": "Audio Message",
  "description": "支持在帖子和聊天中发送音频消息，并自动删除过期文件。",
  "version": "1.0.1",
  "library": "./library.js",
  "hooks": [
    { "hook": "filter:composer.build", "method": "addAudioButton" },
    { "hook": "filter:parse.post", "method": "parseAudioMessage" },
    { "hook": "static:app.load", "method": "init" },
    { "hook": "action:plugin.deactivate", "method": "shutdown" },
    { "hook": "action:plugin.uninstall", "method": "shutdown" }
  ],
  "scripts": [
    "static/lib/main.js"
  ],
  "styles": [
    "static/styles/audio-message.css"
  ]
}
